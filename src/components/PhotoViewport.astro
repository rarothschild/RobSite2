---
import { Image } from '@astrojs/image/components';

const { title, photos } = Astro.props;

---

<div class="p-2 grid justify-items-center max-w-xl bg-[rgb(63,40,78)]">
    <div class="p-2 bg-[#4d4a34]">
        <h2 class="text-2xl font-bold text-[#aaa]">{title}</h2>
    </div>
    <div class="swiffy-slider slider-nav-visible  bg-black m-auto">
        <ul class="slider-container">
            {photos.map((photo: object) => (
                <li class="slide-visible p-2"><div id="slide1"><Image class="mx-auto" src={photo} height={300} /></div></li>
              ))}
        </ul>
        <button type="button" class="slider-nav"></button>
        <button type="button" class="slider-nav slider-nav-next"></button>
    </div>
</div>
