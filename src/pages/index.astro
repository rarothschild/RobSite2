---
import pic3 from '../images/me/PXL_20220619_035359281.jpg';
import pic4 from '../images/me/PXL_20220619_035912682.jpg';
import pic5 from '../images/me/PXL_20220619_040001270.PANO.jpg';
import pic6 from '../images/me/PXL_20220706_205846347.jpg';

import Layout from '../layouts/Layout.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;

function dirToList() {
	var li = document.createElement('li')
}
---

<style>
	#MainPage {
		margin-top: 5vh;
		padding-left: 2em;
		padding-right: 2em;
		}
	#BioBlerb {
		padding-top: 4em
	}
</style>

<Layout title="Home">
	<div class="has-text-centered">
		<div class="columns" id="MainPage">
			<div class="column" id="BioBlerb">
				<div class="block">
					<strong>Welcome!</strong>
				</div>
				<div class="block">
					<p>My name is Robert Rothschild, on this site you can find the different projects I've been working on. 
						I went to school at Fort Lewis in Durango CO for Engineering, worked as an Aerospace Engineer at The Heliospace Corporation, 
						and am currently teaching myself Web Development in conjunction with other Software Engineering techniques.</p>
				</div>
			</div>
			<div id="imageSlider" class="column">
				<div class="swiffy-slider slider-item-reveal slider-item-ratio slider-nav-visible slider-item-ratio-4x3 slider-nav-caretfill slider-nav-dark slider-nav-outside slider-indicators-dark slider-indicators-outside slider-nav-animation-appear">
					<ul class="slider-container">
						<li><img style="margin-bottom: 0px;" src={pic4} alt="Pic of me"/></li>
						<li><img style="margin-bottom: 0px;" src={pic3} alt="Pic of me"/></li>
						<li><img style="margin-bottom: 0px;" src={pic5} alt="Pic of me"/></li>
						<li><img style="margin-bottom: 0px;" src={pic6} alt="Pic of me"/></li>
					</ul>
					<button type="button" class="slider-nav"></button>
					<button type="button" class="slider-nav slider-nav-next"></button>
				
					<div class="slider-indicators">
						<button class="active"></button>
						<button></button>
						<button></button>
						<button></button>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>